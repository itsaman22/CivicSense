# 🔐 Environment Variables for CivicSense Backend
# Copy this file to .env and fill in your actual values

# 🗄️ MongoDB Atlas Connection
# Get this from your MongoDB Atlas dashboard
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/civicsense?retryWrites=true&w=majority

# 🔑 Authentication Secret
# Use a strong, random string for production
JWT_SECRET=your-super-secret-jwt-key-here

# 🌐 Server Configuration
PORT=5000
NODE_ENV=development

# 📧 Email Configuration (for future features)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASSWORD=your_email_password

# File Upload Configuration
UPLOAD_PATH=./uploads 
MAX_FILE_SIZE=5242880

# API Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
